# Discord Bot Token (Required)
DISCORD_TOKEN=your_discord_bot_token_here

# OpenAI API Key (Required for AI features)
OPENAI_API_KEY=your_openai_api_key_here

# Bot Configuration
BOT_OWNERS=your_discord_user_id,another_owner_id
NODE_ENV=production

# ERLC Server Configuration
ERLC_SERVER_ID=your_erlc_server_id
ERLC_API_KEY=your_erlc_api_key_if_required

# Database Configuration (if using external database)
DATABASE_URL=your_database_url_here

# Optional: Webhook URLs for logging
WEBHOOK_LOGS=your_webhook_url_for_logs
WEBHOOK_ERRORS=your_webhook_url_for_errors

# Optional: Additional API Keys
WEATHER_API_KEY=your_weather_api_key
NEWS_API_KEY=your_news_api_key

# Bot Settings
DEFAULT_PREFIX=!
MAX_SUGGESTIONS_PER_DAY=5
MAX_TICKETS_PER_USER=3
COMMAND_COOLDOWN=5000

# Server Specific Settings
GUILD_ID=your_discord_server_id
TEST_GUILD_ID=your_test_server_id

# Replit specific (if hosting on Replit)
REPLIT_DB_URL=your_replit_db_url

# Monitoring and Analytics
SENTRY_DSN=your_sentry_dsn_for_error_tracking
ANALYTICS_ID=your_analytics_id
